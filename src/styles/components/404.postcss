@import url('https://fonts.googleapis.com/css?family=Arvo');
@import 'vars.css';

#not-found {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

  width: 100%;
  height: 100%;
  background-color: var(--background-color);

  #error-code, #error-message {
    color: var(--gray-5);
    font-family: var(--avro);
  }

  #error-code {
    font-size: 10em;
  }

  #error-message {
    font-size: 3em;
  }
}
